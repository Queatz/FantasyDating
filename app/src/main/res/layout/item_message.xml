<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/pad2x"
    android:paddingEnd="@dimen/pad2x"
    android:paddingBottom="@dimen/pad2x"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/messageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:orientation="vertical"
        android:background="@drawable/white_rounded"
        android:elevation="@dimen/pad4z">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Text.Medium"
            android:paddingTop="@dimen/pad2x"
            android:paddingStart="@dimen/pad2x"
            android:paddingEnd="@dimen/pad2x"
            android:layout_marginBottom="-8dp"
            android:textStyle="bold"
            tools:text="Elizabeth"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Text.Medium"
            android:padding="@dimen/pad2x"
            tools:text="I love you"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
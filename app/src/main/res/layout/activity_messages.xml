<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MessagesActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.queatz.fantasydating.ui.FancyImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bkg"
        android:alpha=".125"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/pad"
        app:layout_goneMarginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/fantasy"
        app:layout_constraintBottom_toTopOf="@+id/sendLayout"
        android:paddingTop="@dimen/pad2x"
        android:clipToPadding="false" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fantasy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/story_background_light_2dp"
        android:layout_margin="@dimen/pad"
        android:elevation="@dimen/pad"
        android:visibility="gone"
        tools:visibility="visible">

        <com.queatz.fantasydating.ui.FancyTextView
            android:id="@+id/fantasyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="@dimen/pad4x"
            android:paddingStart="@dimen/pad4x"
            android:paddingEnd="@dimen/pad4x"
            android:textColor="@color/black"
            app:highlight="false"
            android:scrollbars="vertical"
            tools:text="Emiâ€™s Fantasy" />

        <TextView
            android:id="@+id/fantasyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fantasyTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="@dimen/pad4x"
            android:paddingEnd="@dimen/pad4x"
            android:paddingTop="@dimen/pad2x"
            android:background="@null"
            android:maxHeight="180dp"
            android:minHeight="80dp"
            android:paddingBottom="@dimen/pad2x"
            android:textAppearance="@style/Text.Medium"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:scrollbars="vertical"
            tools:text="Boobs. More boobs." />

        <com.queatz.fantasydating.ui.FancyTextView
            android:id="@+id/styleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/fantasyText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="@dimen/pad4x"
            android:paddingEnd="@dimen/pad4x"
            android:textColor="@color/black"
            app:highlight="false"
            android:scrollbars="vertical"
            tools:text="Emi's Cuddle Style" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/styleRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:paddingTop="@dimen/pad2x"
            android:paddingBottom="@dimen/pad4x"
            android:paddingStart="@dimen/pad4x"
            android:paddingEnd="@dimen/pad4x"
            app:layout_constraintTop_toBottomOf="@+id/styleTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_style_small"
            tools:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
            tools:orientation="horizontal"
            android:maxHeight="96dp"
            android:overScrollMode="never" />

    </androidx.constraintlayout.widget.ConstraintLayout>

        <com.queatz.fantasydating.ui.FancyTextView
        android:id="@+id/viewStoryButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad2x"
        android:layout_marginStart="@dimen/pad2x"
        android:layout_marginEnd="@dimen/pad2x"
        android:paddingStart="@dimen/pad2x"
        android:paddingEnd="@dimen/pad2x"
        android:paddingTop="@dimen/pad"
        android:paddingBottom="@dimen/pad"
        android:background="@drawable/white_rounded_2dp"
        app:thin="true"
        android:elevation="@dimen/elevationHigh"
        android:gravity="center_horizontal"
        app:layout_goneMarginTop="@dimen/pad4x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_default="wrap"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="View her story" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sendLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/messagesRecyclerView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/pad">

        <EditText
            android:id="@+id/sendMessageInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sendMessageButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/pad2x"
            android:inputType="textCapSentences|textShortMessage"
            android:maxLines="1"
            android:imeOptions="actionSend"
            android:hint="Send message" />

        <ImageButton
            android:id="@+id/sendMessageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/sendMessageInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_send_black_24dp"
            android:tint="@color/colorPrimary"
            android:padding="@dimen/pad2x"
            android:background="@android:color/transparent"
            android:contentDescription="Send message button"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/fullscreen_modal" android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
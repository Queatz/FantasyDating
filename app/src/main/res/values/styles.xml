<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:textAppearance">@style/Text.Medium</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/Modal</item>
    </style>

    <style name="Modal" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:buttonStyle">@style/Modal.Button</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textAppearanceMedium">@style/Text.Medium</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="dialogCornerRadius">7dp</item>
    </style>

    <style name="Modal.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">@font/questrial</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Text.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/questrial</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
